[Unit]
Description=NeXaos Backend API
After=network.target

[Service]
Type=simple
User=nexaos
WorkingDirectory=/var/www/nexaos/backend
EnvironmentFile=/etc/nexaos/backend.env
ExecStart=/usr/bin/node /var/www/nexaos/backend/src/server.js
Restart=always
RestartSec=3

# Hardening (safe defaults)
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
